{
    "name": "splot/twig-module",
    "description": "Twig integration with Splot Framework.",
    "keywords": ["module", "twig", "template", "templating"],
    "license": "MIT",
    "authors": [
        {
            "name": "Michał Pałys-Dudek",
            "email": "michal@michaldudek.pl"
        }
    ],
     "require": {
        "php": ">=5.3.3",
        "michaldudek/foundation": ">=0.9",
        "splot/framework": ">=0.9,<2.0",
        "twig/twig": "~1.0"
    },
    "require-dev": {
        "phpunit/phpunit": "~4.0"
    },
    "extra": {
        "branch-alias": {
            "dev-master": "0.9.x-dev"
        }
    },
    "minimum-stability": "dev",
    "autoload": {
    	"psr-4": {
            "Splot\\TwigModule\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Splot\\TwigModule\\Tests\\": "tests/"
        }
    }
}
